<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- wizard action on openg2p.beneficiary -->
    <act_window id="partner_disenroll_wizard_action"
                name="Disenroll From Program"
                src_model="openg2p.beneficiary"
                res_model="beneficiary.disenroll.wizard"
                view_type="form" view_mode="form"
                key2="client_action_multi" target="new"
                groups="openg2p.group_openg2p_officer"/>

    <!-- wizard view -->
    <record id="disenroll_wizard_view" model="ir.ui.view">
        <field name="name">Disenroll From Program</field>
        <field name="model">beneficiary.disenroll.wizard</field>
        <field name="arch" type="xml">
            <form string="Disenroll From Program">

                <!-- Various warnings -->
                <div colspan="2" class="oe_form_box_info bg-info oe_text_center">
                    <p attrs="{'invisible': [('use_active_domain', '=', False)]}">
                        <strong>
                            All beneficiaries matching your current search filter will be disenrolled, not only the
                            selected items.
                        </strong>
                    </p>
                    <p attrs="{'invisible': [('use_active_domain', '=', True)]}">
                        <strong>Only beneficiaries checked in list view will be disenrolled.</strong><br/>
                    </p>
                    <p class="mt8">
                        <span attrs="{'invisible': [('use_active_domain', '=', True)]}">
                            If you want to disenroll all beneficiaries matching your search criterion, check this box :
                        </span>
                        <span attrs="{'invisible': [('use_active_domain', '=', False)]}">
                            If you want to use only selected beneficiaries please uncheck this selection box :
                        </span>
                        <field class="oe_inline" name="use_active_domain"/>
                    </p>
                </div>

                <div>
                    Beneficiaries will be disenrolled from the selected program. This operation may take a few
                    minutes<br/>
                </div>
                <group>
                    <field name="program_id"/>
                    <!-- <field name="category_id"/> -->
                    <field name="date_end"/>
                </group>
                <footer>
                    <button string="Apply" name="action_apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
